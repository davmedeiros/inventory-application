extends layout

block content

  h1 Category: #{category.name}

  div

    h4 Instruments

    dl
      each instrument in category_instruments
        dt
          a(href=instrument.url) #{instrument.name}
        dd #{instrument.description}

      else
        p This category has no instruments.
  p
    a(href=category.url+'/delete') Delete category
  p
    a(href=category.url+'/update') Update category